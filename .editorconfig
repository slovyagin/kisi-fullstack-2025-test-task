root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[{*.ats,*.cts,*.mts,*.ts,*.tsx}]
indent_size = 2
tab_width = 2

[{*.cjs,*.es6,*.js,*.mjs}]
indent_size = 2
tab_width = 2
